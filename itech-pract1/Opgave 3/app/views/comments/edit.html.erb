<h1>Edit Comment</h1>

<% @event = Event.find(params[:event_id]) %>

<%= form_for [@event, @comment] do |f| %>
  <p>
  	<p>
  		<%= f.label :commenter %><br />
    	<%= f.collection_select(:person_id, Person.all, :id, :name) %>
    </p>
    <p>
    	<%= f.label :body %><br />
    	<%= f.text_area :body %>
    </p>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>