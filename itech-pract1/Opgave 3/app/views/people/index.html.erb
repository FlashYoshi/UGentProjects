<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Date of birth</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.email %></td>
      <td><%= person.dateofbirth.to_formatted_s(:long)%>
      <td><%= link_to 'Show', person %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
      <td><%= link_to 'Destroy', person_path(person),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to 'Add person', new_person_path %>