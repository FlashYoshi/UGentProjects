<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    
    <RelativeLayout android:id="@+id/horizontal_participant_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
    
        <TextView android:id="@+id/participant_name"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:textSize="14sp"
                  android:padding="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
        
        <ImageButton android:id="@+id/remove_participant_button"
                         android:layout_alignParentRight="true"
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:padding="5dp"
                         android:src="@drawable/ic_change"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/remove_participant" 
                         android:scaleType="fitXY" />
    </RelativeLayout>
    
    <View android:id="@+id/person_row_divider"
          android:layout_below="@id/horizontal_participant_layout"
          android:layout_width="match_parent"
          android:layout_height="1dip" 
          android:background="@color/row_divider" />
</RelativeLayout>